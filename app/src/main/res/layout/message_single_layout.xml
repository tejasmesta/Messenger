<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/default_profile_pic"
        android:id="@+id/message_display"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/message_text"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_display"
        android:text="hii my name is tejas"
        android:textSize="18sp"
        android:layout_margin="6dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:background="@drawable/message_text_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/message_time"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_text"
        android:text="12:30"
        android:textSize="12sp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="6dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_text"
        android:layout_toRightOf="@id/message_display"
        android:layout_marginTop="2dp"
        android:id="@+id/message_image_send"
        />

</RelativeLayout>